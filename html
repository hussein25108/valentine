<script>
let currentSlide=0;
let titleText="For Mira ‚ù§Ô∏è";
let visible=true;
setInterval(()=>{document.title=visible?titleText:"‚ù§Ô∏è"; visible=!visible;},1000);

const letterText=` Hi miro miss you,
      hyde a small  gift aw memory ma baaref shu tsameha
      bas eno ma knt 3areef eza aade jeeb gift krml wd3na hl2
      so hyde a small memory lmfrud ha frjeke yeha l mfrud 
      bde elik bhbeek kteeer my penguin dymn
      w dymn ur supporter ana shu ma 3mlte w always proud 
      w bas hek ma ha kteer hake letter zghire.
From the moment you came into my life, everything felt different.

You brought a kind of peace and happiness I didn‚Äôt know I needed.

I love the way you smile, the way you think, and the way you make life feel lighter.

Thank you for being in my life, you make my days gentler and my heart calmer.
      Loving you feels like home.
Always yours ü§ç
Happy Valentine‚Äôs Day ‚ù§Ô∏è`;
 
let index=0;
function typeLetter(){if(index<letterText.length){document.getElementById("typedText").innerHTML+=letterText.charAt(index); index++; setTimeout(typeLetter,40);}}
function showSlide(i){const slides=document.getElementsByClassName("slide"); if(i>=slides.length) currentSlide=0; if(i<0) currentSlide=slides.length-1; for(let s of slides){s.style.display="none";} slides[currentSlide].style.display="block";}
setInterval(()=>{changeSlide(1)},12000);
function changeSlide(n){currentSlide+=n; showSlide(currentSlide);}

/* ‚úÖ WORKING Heart confetti explosion */
function createConfetti(){
    for(let i=0;i<50;i++){
        const confetti=document.createElement("div");
        confetti.className="confetti";
        confetti.innerText="üíñ";
        confetti.style.position="fixed";
        confetti.style.zIndex="9999";
        confetti.style.pointerEvents="none";
        confetti.style.fontSize=(20+Math.random()*20)+"px";
        confetti.style.left=Math.random()*100+"vw";
        confetti.style.top="-10px";
        confetti.style.opacity=0.9;
        const duration=3+Math.random()*2;
        confetti.style.transition=`transform ${duration}s linear, opacity ${duration}s linear`;
        document.body.appendChild(confetti);
        // trigger the animation
        setTimeout(()=>{ 
            confetti.style.transform=`translateY(100vh) translateX(${Math.random()*100 - 50}px) rotate(${Math.random()*360}deg)`;
            confetti.style.opacity=0;
        },10);
        setTimeout(()=>confetti.remove(), duration*1000);
    }
}

function checkPassword(){
    const password="penguin";
    const input=document.getElementById("passwordInput").value.trim().toLowerCase();
    if(input===password){
        document.getElementById("heartbeatSound").play();
        createConfetti();
        document.getElementById("passwordPage").style.display="none";
        document.getElementById("siteContent").style.display="block";
        showSlide(0);
        typeLetter();
    }else{
        document.getElementById("error").innerText="That heart isn‚Äôt yours‚Ä¶ yet üíî";
    }
}
</script>
